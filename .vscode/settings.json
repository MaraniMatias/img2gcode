// Place your settings in this file to overwrite default and user settings.
{
// Configure glob patterns for excluding files and folders.
"files.exclude": {
  "**/*.js": { "when": "$(basename).ts"},
  "**/*.js.map"     :  true,
  "**/.git"         :  true,
  "**/.DS_Store"    :  true,
  "**/.vscode"      :  true,
  "**/components"   :  true,
  "**/typings"      :  true,
  "**/typings.d.ts" :  true,
  "**/tsconfig.json" :  true,
  "**/*.png"        :  true,
  "**/*.jpeg"       :  true,
  "**/*.xcf"        :  true,
  "**/node_modules" :  true
},
"tslint.enable": false,
"jshint.enable": false
}